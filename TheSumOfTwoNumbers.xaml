<Window x:Class="MathematicalAlgorithms.TheSumOfTwoNumbers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathematicalAlgorithms"
        mc:Ignorable="d"
        Title="TheSumOfTwoNumbers" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="5">
            <Label>两数之和</Label>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Width="100">输入数字用,隔开</TextBlock>
                <TextBox Margin="5" Width="500" x:Name="input_nums"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Width="100">输入和</TextBlock>
                <TextBox Margin="5" Width="500" x:Name="tagget"></TextBox>
            </StackPanel>
            <Button Click="Button_Click">确定查看结果</Button>
        </StackPanel>
        <TextBlock Grid.Row="1" x:Name="result">
            
        </TextBlock>
    </Grid>
</Window>
