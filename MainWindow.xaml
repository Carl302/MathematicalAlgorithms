<Window x:Class="MathematicalAlgorithms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathematicalAlgorithms"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Click="TheSumOfTwoNumbersClick" Margin="5">两数之和</Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock>答案：</TextBlock>
        </StackPanel>
    </Grid>
</Window>
